{
  "compilerOptions": {
    "lib": [
      "ES5",
      "ES6",
      "ES2015",
      "ES7",
      "ES2016",
      "ES2017",
      "ES2018",
      "ESNext",
      "DOM",
      "DOM.Iterable",
    ],
    "target": "es2015",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
